<div class="row">
  <%= form_with(model: [:administrate, article], class: "form", id: "article-form") do |form| %>
    <div class="input-row">
      <div class="input-container">
        <%= form.label :title, class:"label" %>
        <%= form.text_field :title, placeholder:"Digite aqui o título do post", class:"input" %>
      </div>
    </div>
    <div class="input-row">
      <div class="input-container">
        <%= form.label :body, class:"label" %>
        <%= form.text_area :body, rows:"18", class:"textarea", placeholder:"Escreva aqui o conteúdo do post" %>
      </div>
    </div>
    <div>
      <%= form.label :cover_image, style: "display: block" %>
      <%= form.file_field :cover_image %>

      <div id=<%= dom_id(article) %>>
        <%= image_tag article.cover_image.variant(:thumb) if article.cover_image.attached? %>

        <%= link_to "Remover",
              destroy_cover_image_administrate_article_path(article),
              data: { "turbo-confirm": "Tem certeza?", "turbo-method": :delete } if article.cover_image.attached? %>
      </div>
    </div>

    <%= form.submit style: "display: none;" %>
  <% end %>
</div>
